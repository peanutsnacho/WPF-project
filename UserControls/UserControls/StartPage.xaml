<Page x:Class="UserControls.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="StartPage">

    <DockPanel LastChildFill="True" Background="AliceBlue">
        <TextBlock Text="Start Menu" DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="5"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
            <Button Name="EditorButton" Content="Editor" Margin="5" MinWidth="150" Click="EditorButton_Click"/>
            <Button Content="User" Margin="5" MinWidth="150"/>
        </StackPanel>
    </DockPanel>
</Page>
