<Page x:Class="UI.StartMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="StartMenuPage">

    <DockPanel LastChildFill="True">
        <TextBlock Text="Start Menu" DockPanel.Dock="Top" Style="{StaticResource PageTitle}"/>
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="EditorButton" Content="Editor" Click="EditorButton_Click" />
            <Button Content="User"/>
        </StackPanel>
    </DockPanel>
</Page>
